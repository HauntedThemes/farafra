{{!-- The tag below means - insert everything in this file into the {body} of the default.hbs template --}}
{{!< default}}

{{#author}}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="intro {{#if cover_image}}has-cover{{/if}}" {{#if cover_image}} style="background-image: url({{img_url cover_image}})" {{/if}}>
                {{#if profile_image}}
                    <img src="{{img_url profile_image}}" alt="{{name}}" class="profile-image">
                {{/if}}
                <h1>{{name}}</h1>
                <div class="author-content">
                    {{#if bio}}
                        <p>{{bio}}</p>
                    {{else}}
                        <p>Read <a href="{{url}}">more posts</a> by this author.</p>
                    {{/if}}
                    <div class="author-meta">
                        <span class="social">
                            {{#if twitter}}<a href="{{twitter_url}}" class="twitter" title="{{twitter}}" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a>{{/if}}
                            {{#if facebook}}<a href="{{facebook_url}}" class="facebook" title="{{facebook}}" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a>{{/if}}
                        </span>
                        {{#if website}}<span class="author-link"><a href="{{website}}" target="_blank" rel="noopener noreferrer" title="{{website}}"><i class="fa fa-link" aria-hidden="true"></i></a></span>{{/if}}
                        {{#if location}}<span class="author-location"><i class="fa fa-map-marker" aria-hidden="true"></i> {{location}}</span>{{/if}}
                    </div>
                </div>
                <i class="line-t"></i> <i class="line-r"></i> <i class="line-b"></i> <i class="line-l"></i>
            </div>
        </div>
    </div>
</div>
{{/author}}

{{!-- The main content area --}}
<main id="content" role="main">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="loop">
                    {{#foreach posts}}
                        {{> "loop"}}
                    {{/foreach}}
                </div>
            </div>
        </div>
    </div>
</main>