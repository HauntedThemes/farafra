</head>

<body class="amp-template">
    <header>
        <div class="container">
            <div class="row">
                <div class="col-6 ml-auto">
                    <div class="blog-logo">
                        <a href="{{@blog.url}}" title="{{@blog.title}}">
                            {{#if @blog.logo}} <amp-img src="{{@blog.logo}}" alt="{{@blog.title}}" width="80" height="80"/></amp-img> {{else}}{{@blog.title}}{{/if}} 
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    {{#post}}

        <main id="content" role="main" data-id="{{comment_id}}">
            <article class="{{post_class}}">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 post-cover-container">
                            <div class="post-cover post-meta {{#if feature_image}}has-image{{/if}}" {{#if feature_image}} style="background-image: url({{img_url feature_image}});"{{/if}}>
                                <div class="row">
                                    <div class="col-md-8 ml-auto mr-auto">
                                        <h1 class="post-title"><span>{{title}}</span></h1>
                                        <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMM YYYY"}}</time>
                                    </div>
                                </div>
                                <i class="line-t"></i> <i class="line-l"></i> <i class="line-r"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container post-content-container">
                    <div class="row">
                        <div class="col-md-8 ml-auto mr-auto">
                            <section class="post-content">
                                {{content}}
                            </section>
                        </div>
                    </div>
                    <i class="line-b"></i> <i class="line-l"></i> <i class="line-r"></i>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 ml-auto mr-auto">
                            <a href="#" class="comments-trigger"><i class="fa fa-comment-o" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 ml-auto mr-auto text-right">
                            {{#author}}
                                <section class="author {{#if profile_image}}has-image{{/if}}">
                                    {{#if profile_image}}
                                    <figure class="author-image">
                                        <a class="img" href="{{url}}" title="{{name}}"><img src="{{img_url profile_image}}" alt="{{name}}"></a>
                                    </figure>
                                    {{/if}}

                                    <div class="author-content">
                                        <h3>
                                            by <a href="{{url}}">{{name}}</a>
                                        </h3>

                                        {{#if bio}}
                                            <p>{{bio}}</p>
                                        {{else}}
                                            <p>Read <a href="{{url}}">more posts</a> by this author.</p>
                                        {{/if}}

                                        <div class="author-meta">
                                            <span class="social">
                                                {{#if twitter}}<a href="{{twitter_url}}" class="twitter" title="{{twitter}}" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a>{{/if}}
                                                {{#if facebook}}<a href="{{facebook_url}}" class="facebook" title="{{facebook}}" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a>{{/if}}
                                            </span>
                                            {{#if website}}<span class="author-link"><a href="{{website}}" target="_blank" rel="noopener noreferrer" title="{{website}}"><i class="fa fa-link" aria-hidden="true"></i></a></span>{{/if}}
                                            {{#if location}}<span class="author-location"><i class="fa fa-map-marker" aria-hidden="true"></i> {{location}}</span>{{/if}}
                                        </div>
                                    </div>
                                </section>
                            {{/author}}
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 ml-auto mr-auto">
                            <div class="comments"></div>
                        </div>
                    </div>
                </div>
            </article>
        </main>

    {{/post}}


    <footer class="site-footer container">
        <div class="row">
            <div class="col-md-10 mx-auto">
                <div class="footer-content">
                    <div class="row">
                        <div class="col-md-5">
                            <h3>Tags</h3>
                            {{#get "tags" limit="all"}}
                                <ul class="tags">
                                    {{#foreach tags}}
                                        <li>
                                            <a href="{{url}}">{{name}}</a>
                                        </li>
                                    {{/foreach}}
                                </ul>
                            {{/get}}
                        </div>
                        <div class="col-md-5 ml-auto">
                            <h3>Newsletter</h3>
                            {{subscribe_form
                                form_class="gh-signin"
                                input_class="gh-input"
                                button_class="btn"
                                placeholder="Your email address"
                            }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <p class="copyright">&copy; {{date format="YYYY"}}, <a href="{{@blog.url}}">{{@blog.title}}</a>. All Right Reserved.</p>
            </div>
        </div>
    </footer>

</body>
</html>
