{{!-- The tag below means - insert everything in this file into the {body} of the default.hbs template --}}
{{!< default}}

{{!-- The main content area --}}

<main id="content" role="main">
	{{#if @labs.publicAPI}}
		{{^is "paged"}}
			{{#get "posts" filter="featured:true" limit="4"}}
				{{#if posts}}
				<div class="container-fluid">
					<div class="row">
						<div class="col-md-12">
					    	<div class="horz-accordion swiper-container">
								<ul class="swiper-wrapper">
									{{#foreach posts}}
										<li class="swiper-slide {{#if @first}}swiper-slide-active{{/if}}">
											{{> "loop-featured"}}
										</li>
								    {{/foreach}}
								</ul>	
							</div>
						</div>
					</div>
				</div>
				{{/if}}
			{{/get}}
		{{/is}}
	{{/if}}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="loop">
					{{#foreach posts}}
						{{> "loop"}}
				    {{/foreach}}
				</div>
			</div>
		</div>
	</div>
	{{pagination}}
</main>