<body class="amp-template">
    <header>
        <div class="container">
            <div class="row">
                <div class="col-6 ml-auto">
                    <div class="blog-logo">
                        <a href="{{@blog.url}}" title="{{@blog.title}}">
                            <span>{{@blog.title}}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    {{#post}}
    <main id="content" role="main" data-id="{{comment_id}}">
        <article class="{{post_class}} content-inner-post">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 post-cover-container">
                        <div class="post-cover post-meta {{#if feature_image}}has-image{{/if}}">
                            {{#if feature_image}}
                            <figure class="post-image">
                                <amp-img src="{{img_url feature_image absolute="true"}}" width="600" height="400" layout="responsive"></amp-img>
                            </figure>
                            {{/if}}
                            <div class="post-cover-inner-container">
                                <h1 class="post-title"><span>{{title}}</span></h1>
                                <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMM YYYY"}}</time>
                            </div>
                            <i class="line-t"></i> <i class="line-l"></i> <i class="line-r"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid post-content-container">
                <div class="post-content-inner-container">
                    <section class="post-content">
                        <div class="editor-content">{{amp_content}}</div>
               
                        {{#if tags}}
                            <div class="tags">
                            {{#foreach tags}}
                                <a href="{{url}}" title="{{name}}" class="tag tag-{{id}} {{slug}}">{{name}}</a>
                            {{/foreach}}
                            </div>
                        {{/if}}
                    </section>
                </div>
                <i class="line-b"></i> <i class="line-l"></i> <i class="line-r"></i>
            </div>
            <div class="container-fluid order-1">
                {{#if authors}}
                    {{#foreach authors}}
                        {{#if @first}}
                            <section class="author {{#if profile_image}}has-image{{/if}}">
                                {{#if profile_image}}
                                <figure class="author-image">
                                    <a class="img" href="{{url}}" title="{{name}}">
                                        <amp-img src="{{img_url profile_image absolute="true"}}" width="80" height="80" layout="responsive"></amp-img>
                                    </a>
                                </figure>
                                {{/if}}

                                <div class="author-content">
                                    <h3> {{t "by"}} <a href="{{url}}">{{name}}</a> </h3>

                                    {{#if bio}}
                                        <p>{{bio}}</p>
                                    {{else}}
                                        <p>{{{t "Read <a href='{url}'>more posts</a> by this author" url=(url)}}}.</p>
                                    {{/if}}

                                </div>
                            </section>
                        {{/if}}
                    {{/foreach}}
                {{/if}}
           </div>
        </article>
    </main>
    {{/post}}

    <footer class="site-footer container">
        <div class="row">
            <div class="col-md-12 text-center">
                <p class="copyright">{{t "Copyright"}} &copy; {{date format="YYYY"}}, <a href="{{@blog.url}}">{{@blog.title}}</a>. {{t "All Right Reserved"}}.</p>
            </div>
        </div>
    </footer>

</body>
</html>
