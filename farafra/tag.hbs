{{!-- The tag below means - insert everything in this file into the {body} of the default.hbs template --}}
{{!< default}}

{{#tag}}
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="intro {{#if feature_image}}has-cover{{/if}}" {{#if feature_image}} style="background-image: url({{img_url feature_image}})" {{/if}}>
				<h1>{{name}}</h1>
				<i class="line-t"></i> <i class="line-r"></i> <i class="line-b"></i> <i class="line-l"></i>
			</div>
		</div>
	</div>
</div>
{{/tag}}

{{!-- The main content area --}}
<main id="content" role="main">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="loop">
					{{#foreach posts}}
						{{> "loop"}}
				    {{/foreach}}
				</div>
			</div>
		</div>
	</div>
	{{pagination}}
</main>