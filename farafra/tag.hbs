{{!-- The tag below means - insert everything in this file into the {body} of the default.hbs template --}}
{{!< default}}

{{#tag}}

    {{#if feature_image}}
    <style type="text/css">
        .responsive-header-img {
            background-image: url({{img_url feature_image size='l'}});
        }
        @media(max-width: 767px) {
            .responsive-header-img {
                background-image: url({{img_url feature_image size='m'}});
                background-image: -webkit-image-set(
                    url({{img_url feature_image size='m'}}) 1x,
                    url({{img_url feature_image size='l'}}) 2x
                );
                background-image: image-set(
                    url({{img_url feature_image size='m'}}) 1x,
                    url({{img_url feature_image size='l'}}) 2x
                );
            }
        }
    </style>
    {{/if}}

	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="intro {{#if feature_image}}responsive-header-img has-cover{{/if}}">
					<h1>{{name}}</h1>
					<i class="line-t"></i> <i class="line-r"></i> <i class="line-b"></i> <i class="line-l"></i>
				</div>
			</div>
		</div>
	</div>
{{/tag}}

{{!-- The main content area --}}
<main id="content" role="main">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="loop">
					{{#foreach posts}}
						{{> "loop"}}
				    {{/foreach}}
				</div>
			</div>
		</div>
	</div>
	{{pagination}}
</main>