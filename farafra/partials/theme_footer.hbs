    <div class="backdrop"></div>

    <footer class="site-footer container">
        <div class="row">
            <div class="col-md-12">
                <div class="footer-content">
                    <div class="row">
                        {{#get "tags" include="count.posts"}}
                            <div class="col-md-6">
                                <div class="footer-tags">
                                    <h3>{{t "Tags"}}</h3>
                                    <ul class="tags">
                                        {{#foreach tags}}
                                            {{#if count.posts}}
                                                <li>
                                                    <a href="{{url}}">{{name}}</a>
                                                </li>
                                            {{/if}}
                                        {{/foreach}}
                                    </ul>
                                    <i class="line-t"></i> <i class="line-r"></i> <i class="line-b"></i> <i class="line-l"></i>
                                </div>
                            </div>
                        {{/get}}
                        <div class="col-md-6">
                            <div class="footer-newsletter">
                                <h3>{{t "Newsletter"}}</h3>
                                {{subscribe_form
                                    form_class="gh-signin"
                                    input_class="gh-input"
                                    button_class="btn"
                                    placeholder=(t "Your email address")
                                }}
                                <i class="line-t"></i> <i class="line-r"></i> <i class="line-b"></i> <i class="line-l"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <p class="copyright">{{t "Copyright"}} &copy; {{date format="YYYY"}}, <a href="{{@blog.url}}">{{@blog.title}}</a>. {{t "All Right Reserved"}}.</p>
            </div>
        </div>
    </footer>