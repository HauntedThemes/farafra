{{!-- The tag below means - insert everything in this file into the {body} of the default.hbs template --}}
{{!< default}}

{{#tag}}
<div class="container">
	<div class="row">
		<div class="col-lg-8 offset-lg-2 text-center tag-title">
			<h1>{{name}}</h1>
		</div>
	</div>
</div>
{{/tag}}

{{!-- The main content area --}}
<main id="content" role="main">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="loop">
					{{#foreach posts}}
						{{> "loop"}}
				    {{/foreach}}
				</div>
			</div>
		</div>
	</div>
</main>